<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".pages.ForAnyOne.AnyOneActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="مرحبآ بكم في مجمع اللغة العربية"
            android:gravity="center"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginBottom="18dp"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="   تبحث عن كلمة عربيه؟"
                    android:textSize="20dp"
                    android:id="@+id/arword"
                    android:textStyle="bold|italic"
                    android:textColor="#0d3f67"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="   أم عن مصطلح علمي؟"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/csword"
                    android:textStyle="bold|italic"
                    android:textColor="#0d3f67"
                    />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="أم تريد تسجيل الدخول ؟"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/login"
            android:textStyle="bold|italic"
            android:textColor="#204969"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="85dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/translate"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="85dp"
            android:id="@+id/trans_img"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l_post"
            android:layout_margin="16dp"
            android:orientation="vertical">
        </LinearLayout>
</LinearLayout>