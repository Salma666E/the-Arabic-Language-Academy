<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layoutDirection="rtl"
    tools:context=".Fragments.AddCommentFragment"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:queryHint="محرك البحث"
            android:iconifiedByDefault="false"
            />
        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="اختر اللجنة"
            android:id="@+id/text"
            android:gravity="center_vertical"
            android:textColor="@color/colorItem"
            />
        <Spinner
            android:layout_width="33dp"
            android:layout_height="70dp"
            android:id="@+id/select_commusion"
            />
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ar_word"
        android:hint="معني الكلمة"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWord"
        android:textStyle="bold"
        android:textSize="21dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descr_word"
        android:textSize="20dp"
        android:hint="الوصف الخاص بها"
        android:textColor="@color/colorWord"
        android:layout_marginRight="9dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/my_font"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorWord"
                android:background="@drawable/et_shape"
                android:layout_margin="16dp"
                android:text="عرض جميع التعليقات الخاصه بالكلمه"
                android:id="@+id/com_word"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="66dp"
                    >
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp"
                        android:cacheColorHint="@color/colorItem"
                        android:id="@+id/listCom"/>

                </LinearLayout>
            </ScrollView>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="لكتابة تعليق ..."
            android:fontFamily="@font/my_font"
            android:textSize="28dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWord"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/submit"
            android:gravity="center"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
